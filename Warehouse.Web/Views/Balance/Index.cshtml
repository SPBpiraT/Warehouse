@model Warehouse.Domain.ViewModels.Balance.BalancesListViewModel

@{
    ViewData["Title"] = "Баланс";
}

<div class="container-fluid">
    <h2 class="text-dark text-truncate">@ViewData["Title"]</h2>
    <form method="get">
        <div class="d-flex flex-column flex-md-row">
            <div class="d-flex flex-column me-2 mb-2">
                <label asp-for="Resources" class="text-truncate"></label>
                <select asp-for="SelectedResources" asp-items="Model.Resources" class="selectpicker" data-placeholder="Выберите"></select>
            </div>
            <div class="d-flex flex-column me-2 mb-2">
                <label asp-for="Units" class="text-truncate"></label>
                <select asp-for="SelectedUnits" asp-items="Model.Units" class="selectpicker" data-placeholder="Выберите"></select>
            </div>
        </div>
        <button type="submit" class="btn btn-dark link__hover text-truncate">Применить фильтр</button>
    </form>
    <br>

    @if (Model.Balances is not null && Model.Balances.Count() > 0)
    {
        <table class="table table-hover border border-dark w-100">
            <thead>
                <tr>
                    <th class="text-truncate border-end border-dark" scope="col">
                        @Html.DisplayName("Ресурс")
                    </th>
                    <th class="text-truncate border-end border-dark" scope="col">
                        @Html.DisplayName("Единица измерения")
                    </th>
                    <th class="text-truncate" scope="col">
                        @Html.DisplayName("Количество")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var balance in Model.Balances) //TODO: check for null
                {
                    <tr>
                        <td class="text-truncate border-end border-dark">
                            @balance.Resource.Title
                        </td>
                        <td class="text-truncate border-end border-dark">
                            @balance.Unit.Title
                        </td>
                        <td class="text-truncate">
                            @balance.Quantity
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-truncate">
            Ничего не найдено!
        </p>
    }

</div>

