@model Warehouse.Domain.ViewModels.Resource.ResourceViewModel
@{
    ViewData["Title"] = "Ресурс";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="text-dark text-truncate">@ViewData["Title"]</h2>
            <div class="d-flex flex-wrap flex-sm-nowrap">
                <button type="submit" form="createForm" class="btn btn-dark link__hover text-truncate me-2 mb-2">Сохранить</button>
                <a asp-action="Index" class="btn btn-dark link__hover text-truncate me-2 mb-2">Назад к списку</a>
            </div>
            <br>
            <form id="createForm" method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label w-100 text-truncate"></label>
                    <input asp-for="Title"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
