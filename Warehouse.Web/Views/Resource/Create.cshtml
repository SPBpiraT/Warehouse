@model Warehouse.Web.Models.Resource.ResourceViewModel
@{
    ViewData["Title"] = "Ресурс";
}

<div class="row px-4">
    <div class="col-12">
        <div>
            <h2 class="text-dark text-truncate">@ViewData["Title"]</h2>
            <button type="submit" form="createForm" class="btn btn-dark link__hover text-truncate mb-2">Сохранить</button>
        </div>
        <br>
        <form id="createForm" method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label w-100 text-truncate">Наименование</label>
                <input asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>