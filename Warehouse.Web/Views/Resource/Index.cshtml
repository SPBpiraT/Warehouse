@model Warehouse.Web.Models.Resource.ResourcesListViewModel

@{
    ViewData["Title"] = "Ресурсы";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h2 class="text-dark text-truncate">@ViewData["Title"]</h2>
            <div>
                <a asp-controller="Resource" asp-action="Create" class="btn btn-dark link__hover text-truncate">Добавить</a>
                <a asp-controller="Resource" asp-action="Archieve" class="btn btn-dark link__hover text-truncate">К архиву</a>
            </div>
        </div>
    </div>
    <br>
    <table class="table table-hover border border-dark w-100">
        <thead>
            <tr>
                <th class="text-truncate" scope="col">
                    @Html.DisplayName("Наименование")
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ResourcesList is not null)
            {
                foreach (var resource in Model.ResourcesList)
                {
                    <tr>
                        <td class="text-truncate">
                            <a asp-controller="Resource" asp-action="Edit" asp-route-title="@resource.Id" class="d-block text-decoration-none text-reset">@Html.DisplayFor(modelItem => resource.Title)</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <p>Нет доступных ресурсов.</p>
            }
        </tbody>
    </table>
</div>