<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Управление складом</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Warehouse.Web.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-nowrap">
    <div class="sidebar d-flex flex-column flex-shrink-0">
        <div class="sidebar-header">
            <a href="@Url.Action("Index", "Home")">Управление складом</a>
        </div>

        <div class="sidebar-section">Склад</div>
            <a class="sidebar-link" asp-controller="Warehouse" asp-action="Balance">Баланс</a>
            <a class="sidebar-link" asp-controller="Warehouse" asp-action="Incoming">Поступления</a>
            <a class="sidebar-link" asp-controller="Warehouse" asp-action="Outgoing">Отгрузки</a>

        <div class="sidebar-section">Справочники</div>
            <a class="sidebar-link" asp-controller="References" asp-action="Clients">Клиенты</a>
            <a class="sidebar-link" asp-controller="References" asp-action="Units">Единицы измерения</a>
            <a class="sidebar-link" asp-controller="Resource" asp-action="Resources">Ресурсы</a>
    </div>

    <div class="main-content flex-grow-1 overflow-auto">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>