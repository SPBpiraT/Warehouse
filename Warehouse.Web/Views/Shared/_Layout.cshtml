<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Управление складом</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Warehouse.Web.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="sidebar col-12 col-sm bg-dark p-3 sticky-top">
                <div class="mb-3 px-2">
                    <a class="text-light text-decoration-none text-truncate" href="@Url.Action("Index", "Home")">Управление складом</a>
                </div>
                <ul class="nav nav-pills flex-column px-2">
                    <li class="fw-bold text-light mb-3">Склад</li>
                    <li class="mb-3">
                        <a class="d-block text-decoration-none text-light px-2 sidebar-link__hover" asp-controller="Warehouse" asp-action="Balance">Баланс</a>
                    </li>
                    <li class="mb-3">
                        <a class="d-block text-decoration-none text-light px-2 sidebar-link__hover" asp-controller="Warehouse" asp-action="Incoming">Поступления</a>
                    </li>
                    <li class="mb-3">
                        <a class="d-block text-decoration-none text-light px-2 sidebar-link__hover" asp-controller="Warehouse" asp-action="Outgoing">Отгрузки</a>
                    </li>
                    <li class="fw-bold text-light mb-3">Справочники</li>
                    <li class="mb-3">
                        <a class="d-block text-decoration-none text-light px-2 sidebar-link__hover" asp-controller="References" asp-action="Clients">Клиенты</a>
                    </li>
                    <li class="mb-3">
                        <a class="d-block text-decoration-none text-light px-2 sidebar-link__hover text-truncate" asp-controller="References" asp-action="Units">Единицы измерения</a>
                    </li>
                    <li class="mb-3">
                        <a class="d-block text-decoration-none text-light px-2 sidebar-link__hover" asp-controller="Resource" asp-action="Resources">Ресурсы</a>
                    </li>
                </ul>
            </nav>
            <main class="col-12 col-sm bg-secondary text-break p-3">
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


